<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="10sp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/netflix_background"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/buttonDado"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"


        android:background="@null"
        android:clickable="true"
        android:elevation="20dp"
        android:orientation="horizontal"
        android:padding="8px">

        <ImageView
            android:id="@+id/imageViewDado"
            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="3"
            app:srcCompat="@drawable/netflix" />
        <Space
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/textPrivacidad"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center"
            android:text="Privacidad"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/textAyuda"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center"
            android:text="Ayuda"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton

        android:id="@+id/IniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginBottom="30sp"
        android:elevation="10sp"
        android:backgroundTint="#E50914"
        android:textColor="@color/white"

        android:stateListAnimator="@null"
        android:text="@string/Iniciar_sesion" />

</RelativeLayout>
