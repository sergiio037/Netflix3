<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="#141414"
    android:layout_height="match_parent">

        <ImageButton
            android:elevation="10dp"
            android:background="@null"
            android:id="@+id/imageBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12sp"
            android:scaleType="fitStart"

            app:srcCompat="@drawable/boton_back_blanco" />
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayoutContenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#141414"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/LinearLayoutPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#141414"
            android:orientation="vertical"
            >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:elevation="10sp"
            app:srcCompat="@drawable/stranger_things_play"
            tools:visibility="visible" />


            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:elevation="10dp"
                android:padding="12sp"
                android:scaleType="centerCrop"
                android:src="@drawable/boton_play" />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Stranger Things"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />
        <LinearLayout
            android:id="@+id/LinearLayoutDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#141414"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="#46D369"
                android:layout_marginHorizontal="10dp"
                android:text="93 % de coincidencia"

                android:textSize="@dimen/size_title"
                android:textStyle="bold"
                tools:ignore="SpUsage" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"
                android:text="2017"

                android:textSize="@dimen/size_title"
                android:textStyle="bold"
                tools:ignore="SpUsage" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"
                android:text="2 temporadas"

                android:textSize="@dimen/size_title"
                android:textStyle="bold"
                tools:ignore="SpUsage" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"
            android:text="A raiz de la desaparici칩n de un  ni침o, un pueblo desvela un misterio relacionado con experimento ssecretos fuerzas sobrenaturales aterradoras y una ni침a muy extra침a."
            android:textSize="@dimen/size_title"
            android:textStyle="bold"
            tools:ignore="SpUsage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="#B3B3B3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"
            android:text="Reparto: Winona Ryder, David Harbour, Mathew Medine"
            android:textSize="@dimen/text_size_categories"

            tools:ignore="SpUsage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textColor="#B3B3B3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"
            android:text="Creada por: Los hermanos Duffer"
            android:textSize="@dimen/text_size_categories"

            tools:ignore="SpUsage" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#141414"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Episodios"
                android:layout_marginLeft="10dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_list"
                android:textAllCaps="false"
                android:textColor="#B3B3B3"
                android:textSize="@dimen/size_categorie"
                app:icon="@drawable/ic_plus_grande"
                app:iconGravity="top"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpUsage" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_like"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_list"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="#B3B3B3"
                android:textSize="@dimen/size_categorie"
                app:icon="@drawable/like"
                app:iconGravity="top"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpUsage" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_list"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_list"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="#B3B3B3"
                android:textSize="@dimen/size_categorie"
                app:icon="@drawable/ic_compartir"
                app:iconGravity="top"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpUsage" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"

            android:layout_weight="1"
            android:layout_marginTop="10sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Episodios"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_list"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:textColor="#B3B3B3"
            android:textSize="@dimen/size_categorie"
            app:icon="@drawable/ic_linea_roja"
            app:iconGravity="top"
            app:iconTint="#E50914"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpUsage" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>